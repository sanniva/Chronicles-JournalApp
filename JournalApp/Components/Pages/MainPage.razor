                        </div>
                    }
                </div>
            </div>

            <!-- Tag Breakdown -->
            <div class="chart-card">
                <div class="card-header">
                    <h3>Tag Breakdown</h3>
                    <span class="card-subtitle">% of entries per category</span>
                </div>
                <div class="chart-wrapper">
                    @if (_isLoading)
                    {
                        <div class="chart-loading">
                            <div class="spinner"></div>
                            <span>Loading categories...</span>
