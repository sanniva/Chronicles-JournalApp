                    @if (_isLoading)
                    {
                        <div class="chart-loading">
                            <div class="spinner"></div>
                            <span>Loading mood data...</span>
                        </div>
                    }
                    else if (_hasMoodData)
                    {
                        <div class="mood-chart-container">
                            <div class="mood-chart">
                                <svg width="160" height="160" viewBox="0 0 160 160">
                                    @{
                                        var radius = 60;
                                        var centerX = 80;
                                        var centerY = 80;
                                        var cumulativeAngle = 0.0;
        
                                        // Calculate angles
                                        var positiveAngle = 360.0 * (_positiveMoodPercent / 100.0);
                                        var neutralAngle = 360.0 * (_neutralMoodPercent / 100.0);
                                    }
    
                                    <!-- Positive segment -->
                                    <path d="@GetArcPath(centerX, centerY, radius, cumulativeAngle, cumulativeAngle + positiveAngle)"
                                          fill="#10b981" 
                                          class="chart-segment"
                                          title='Positive: @_positiveMoodPercent.ToString("0.0")%'>
                                    </path>
                                    @{ cumulativeAngle += positiveAngle; }
    
                                    <!-- Neutral segment -->
                                    <path d="@GetArcPath(centerX, centerY, radius, cumulativeAngle, cumulativeAngle + neutralAngle)"
                                          fill="#f59e0b" 
                                          class="chart-segment"
                                          title='Neutral: @_neutralMoodPercent.ToString("0.0")%'>
                                    </path>
                                    @{ cumulativeAngle += neutralAngle; }
    
                                    <!-- Negative segment -->
                                    <path d="@GetArcPath(centerX, centerY, radius, cumulativeAngle, cumulativeAngle + (360 - cumulativeAngle))"
                                          fill="#ef4444" 
                                          class="chart-segment"
                                          title='Negative: @_negativeMoodPercent.ToString("0.0")%'>
                                    </path>
    
                                    <circle cx="80" cy="80" r="30" fill="white"></circle>
                                </svg>
                            
                                <div class="chart-center">
                                    <div class="center-value">@_totalMoodEntries</div>
                                    <div class="center-label">entries</div>
                                </div>
                            </div>
                        
                            <div class="mood-legend">
                                <div class="legend-item">
                                    <span class="legend-color" style="background: #10b981;"></span>
                                    <span class="legend-label">Positive</span>
                                    <span class="legend-value">@_positiveMoodPercent.ToString("0.0")%</span>
                                </div>
                                <div class="legend-item">
                                    <span class="legend-color" style="background: #f59e0b;"></span>
                                    <span class="legend-label">Neutral</span>
                                    <span class="legend-value">@_neutralMoodPercent.ToString("0.0")%</span>
                                </div>
                                <div class="legend-item">
                                    <span class="legend-color" style="background: #ef4444;"></span>
                                    <span class="legend-label">Negative</span>
                                    <span class="legend-value">@_negativeMoodPercent.ToString("0.0")%</span>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="chart-empty">
                            <span>üìä</span>
                            <p>No mood data</p>
                            <small>Start writing to see stats</small>
                        </div>
                    }
                </div>
            </div>

            <!-- Mood Details -->
