            <!-- Word Count Trends -->
            <div class="chart-card">
                <div class="card-header">
                    <h3>Writing Trends</h3>
                    <span class="card-subtitle">Average words per entry</span>
                </div>
                <div class="chart-wrapper">
                    @if (_isLoading)
                    {
                        <div class="chart-loading">
                            <div class="spinner"></div>
                            <span>Analyzing trends...</span>
                        </div>
                    }
                    else if (_wordCountTrends.Any())
                    {
                        <div class="trend-chart">
                            <div class="trend-stats">
                                <div class="trend-stat">
                                    <div class="trend-label">Current Avg</div>
                                    <div class="trend-value">@_currentAvgWords <small>words</small></div>
                                </div>
                                <div class="trend-stat">
                                    <div class="trend-label">Trend</div>
                                    <div class="trend-value @(_wordCountTrend > 0 ? "positive" : _wordCountTrend < 0 ? "negative" : "")">
                                        @(_wordCountTrend > 0 ? "+" : "")@_wordCountTrend.ToString("0")
                                    </div>
                                </div>
                            </div>
                        
                            <div class="trend-graph">
                                @{
                                    var maxWords = _wordCountTrends.Max(t => t.WordCount);
                                    var minWords = _wordCountTrends.Min(t => t.WordCount);
                                    var range = maxWords - minWords;
                                    var points = new List<string>();
                            
                                    for (int i = 0; i < _wordCountTrends.Count; i++)
                                    {
                                        var point = _wordCountTrends[i];
                                        var normalized = range > 0 ? (point.WordCount - minWords) * 100 / range : 50;
                                        var x = i * (100.0 / (_wordCountTrends.Count - 1));
                                        points.Add($"{x.ToString("0.0")},{100 - normalized}");
                                    }
                                    var pathData = $"M {string.Join(" L ", points)}";
                                }
                            
                                <svg width="100%" height="40">
                                    <path d="@pathData" fill="none" stroke="#0ea5e9" stroke-width="2" stroke-linecap="round"/>
                                </svg>
                            
                                <div class="graph-labels">
                                    <span>Start</span>
                                    <span>Recent</span>
                                </div>
                            </div>
                        </div>
                    }
