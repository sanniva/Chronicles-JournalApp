                                    <div class="breakdown-icon">üëç</div>
                                    <div class="breakdown-info">
                                        <div class="breakdown-label">Positive</div>
                                        <div class="breakdown-value">@_positiveMoodCount</div>
                                        <div class="breakdown-percent">@_positiveMoodPercent.ToString("0.0")%</div>
                                    </div>
                                </div>
                            
                                <div class="breakdown-item neutral">
                                    <div class="breakdown-icon">üòê</div>
                                    <div class="breakdown-info">
                                        <div class="breakdown-label">Neutral</div>
                                        <div class="breakdown-value">@_neutralMoodCount</div>
                                        <div class="breakdown-percent">@_neutralMoodPercent.ToString("0.0")%</div>
                                    </div>
                                </div>
                            
                                <div class="breakdown-item negative">
