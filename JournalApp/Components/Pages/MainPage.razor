</div>

@code {
    private List<JournalEntry> _entries = new();
    private bool _isLoading = true;
    private bool _hasMoodData = false;
    
    // Mood statistics
    private string _mostCommonMood = "None";
    private int _mostCommonMoodCount = 0;
    private int _totalMoodEntries = 0;
    
    private int _positiveMoodCount = 0;
    private int _neutralMoodCount = 0;
    private int _negativeMoodCount = 0;
    private double _positiveMoodPercent = 0;
    private double _neutralMoodPercent = 0;
    private double _negativeMoodPercent = 0;
    
    // Tag statistics
    private List<TagData> _topTags = new();
    private List<TagBreakdown> _tagBreakdown = new();
    
    // Word count trends
    private List<WordCountTrend> _wordCountTrends = new();
    private int _currentAvgWords = 0;
    private int _wordCountTrend = 0;
    
    // Missed days
    private List<DateTime> _recentMissedDays = new();
    
    // Basic stats
    private int CurrentStreak = 0;
    private int LongestStreak = 0;
    private int MissedDays = 0;
    private int TotalEntries = 0;
    private int TotalWords = 0;
    
    // Data classes
    private class TagData
    {
        public string Category { get; set; } = "";
        public int Count { get; set; }
    }
    
    private class TagBreakdown
    {
        public string Category { get; set; } = "";
        public int Count { get; set; }
        public double Percentage { get; set; }
    }
    
    private class WordCountTrend
    {
        public string Period { get; set; } = "";
        public int WordCount { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        if (!UserState.IsAuthenticated)
        {
            Navigation.NavigateTo("/", true);
            return;
        }
        
        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        try
        {
            _isLoading = true;

            // Load entries FOR CURRENT USER ONLY
            var entries = await DbService.GetEntriesByUserId(UserState.CurrentUser.UserId);
            _entries = entries ?? new List<JournalEntry>();

            // Calculate basic stats
            TotalEntries = _entries.Count;
            CalculateStreaks();
            CalculateMissedDays();

            // Calculate all detailed stats
            if (_entries.Any())
            {
                CalculateMoodStats();
                CalculateTagStats();
                CalculateWordCountTrends();
                CalculateRecentMissedDays();
            }
            
            _hasMoodData = _positiveMoodCount + _neutralMoodCount + _negativeMoodCount > 0;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private void CalculateMoodStats()
    {
        // Categorize moods
        var moodGroups = _entries
            .Where(e => !string.IsNullOrEmpty(e.PrimaryMood))
            .GroupBy(e => e.PrimaryMood)
            .ToList();

        _totalMoodEntries = moodGroups.Sum(g => g.Count());
        
        // Most common mood
        var mostCommon = moodGroups
            .OrderByDescending(g => g.Count())
            .FirstOrDefault();
        
        if (mostCommon != null)
        {
            _mostCommonMood = mostCommon.Key;
            _mostCommonMoodCount = mostCommon.Count();
        }

        // Categorize by mood type
        foreach (var group in moodGroups)
        {
            var mood = group.Key.ToLower();
            var count = group.Count();
            
            if (IsPositiveMood(mood))
                _positiveMoodCount += count;
            else if (IsNeutralMood(mood))
                _neutralMoodCount += count;
            else
                _negativeMoodCount += count;
        }

        // Calculate percentages
        var total = _positiveMoodCount + _neutralMoodCount + _negativeMoodCount;
        if (total > 0)
        {
            _positiveMoodPercent = (_positiveMoodCount * 100.0) / total;
            _neutralMoodPercent = (_neutralMoodCount * 100.0) / total;
            _negativeMoodPercent = (_negativeMoodCount * 100.0) / total;
        }
    }

    private bool IsPositiveMood(string mood)
    {
        var positiveMoods = new[] { "happy", "excited", "joyful", "content", "grateful", "proud", "hopeful", "optimistic", "relaxed" };
        return positiveMoods.Contains(mood);
    }

    private bool IsNeutralMood(string mood)
    {
        var neutralMoods = new[] { "neutral", "calm", "okay", "fine", "thoughtful", "bored", "tired", "indifferent", "contemplative" };
        return neutralMoods.Contains(mood);
    }

    private void CalculateTagStats()
    {
        // Most used tags (top 8)
        _topTags = _entries
            .Where(e => !string.IsNullOrEmpty(e.Category))
            .GroupBy(e => e.Category)
            .Select(g => new TagData { Category = g.Key, Count = g.Count() })
            .OrderByDescending(t => t.Count)
            .Take(8)
            .ToList();

        // Tag breakdown (percentage) - top 6
        var totalWithCategories = _entries.Count(e => !string.IsNullOrEmpty(e.Category));
        if (totalWithCategories > 0)
        {
            _tagBreakdown = _entries
                .Where(e => !string.IsNullOrEmpty(e.Category))
                .GroupBy(e => e.Category)
                .Select(g => new TagBreakdown 
                { 
                    Category = g.Key, 
                    Count = g.Count(),
                    Percentage = (g.Count() * 100.0) / totalWithCategories
                })
                .OrderByDescending(t => t.Count)
                .Take(6)
                .ToList();
        }
    }

    private void CalculateWordCountTrends()
    {
        if (!_entries.Any()) return;

        // Group by week for trends
        var entriesByWeek = _entries
            .GroupBy(e => GetWeekNumber(e.EntryDate))
            .Select(g => new 
            { 
                Week = g.Key,
                AvgWords = (int)g.Average(e => e.Content?.Split(' ', StringSplitOptions.RemoveEmptyEntries).Length ?? 0)
            })
            .OrderBy(w => w.Week)
            .TakeLast(6) // Last 6 weeks
            .ToList();

        if (entriesByWeek.Count >= 2)
        {
            _wordCountTrends = entriesByWeek
                .Select((w, i) => new WordCountTrend 
                { 
                    Period = $"W{i+1}",
                    WordCount = w.AvgWords 
                })
                .ToList();

            _currentAvgWords = entriesByWeek.Last().AvgWords;
            _wordCountTrend = entriesByWeek.Last().AvgWords - entriesByWeek.First().AvgWords;
        }
    }

    private string GetWeekNumber(DateTime date)
    {
        var startOfYear = new DateTime(date.Year, 1, 1);
        var days = (date - startOfYear).Days;
        return $"Week {((days / 7) + 1)}";
    }

    private void CalculateStreaks()
    {
        if (!_entries.Any()) return;

        // Get all entry dates (unique dates only)
        var entryDates = _entries
            .Select(e => e.EntryDate.Date)
            .Distinct()
            .OrderByDescending(d => d)
            .ToList();

        // Current streak - improved 24-hour aware calculation
        CurrentStreak = CalculateCurrentStreak(entryDates);
        
        // Longest streak
        CalculateLongestStreak(entryDates);
    }

    private int CalculateCurrentStreak(List<DateTime> entryDates)
    {
        if (!entryDates.Any()) return 0;
        
        int streak = 0;
        DateTime expectedDate = DateTime.Today;
        var todayHasEntry = entryDates.FirstOrDefault(d => d == DateTime.Today) != default;
        
        // If today has an entry, start counting from today
        if (todayHasEntry)
        {
            streak = 1;
            expectedDate = DateTime.Today.AddDays(-1);
        }
        else
        {
            // If yesterday has an entry, streak continues (24-hour grace period)
            var yesterdayHasEntry = entryDates.FirstOrDefault(d => d == DateTime.Today.AddDays(-1)) != default;
            if (yesterdayHasEntry)
            {
                streak = 1;
                expectedDate = DateTime.Today.AddDays(-2);
            }
            else
            {
                return 0; // No recent entry
            }
        }
        
        // Count consecutive days backwards
        foreach (var date in entryDates.Where(d => d < expectedDate.AddDays(1)).OrderByDescending(d => d))
        {
            if (date == expectedDate)
            {
                streak++;
                expectedDate = expectedDate.AddDays(-1);
            }
            else if (date < expectedDate)
            {
                break; // Gap in streak
            }
        }
        
        return streak;
    }

    private void CalculateLongestStreak(List<DateTime> entryDates)
    {
        if (!entryDates.Any()) 
        {
            LongestStreak = 0;
            return;
        }

        var orderedDates = entryDates.OrderBy(d => d).ToList();
        int longest = 0;
        int current = 1;

        for (int i = 1; i < orderedDates.Count; i++)
        {
            var daysDiff = (orderedDates[i] - orderedDates[i - 1]).Days;
            
            // Consider 2 days as continuous (24-hour grace)
            if (daysDiff == 1 || daysDiff == 2)
            {
                current++;
            }
            else
            {
                longest = Math.Max(longest, current);
                current = 1;
            }
        }

        LongestStreak = Math.Max(longest, current);
    }

    private void CalculateMissedDays()
    {
        if (!_entries.Any()) 
        {
            MissedDays = 0;
            return;
        }

        var entryDates = _entries
            .Select(e => e.EntryDate.Date)
            .Distinct()
            .ToHashSet();

        var firstEntry = _entries.Min(e => e.EntryDate.Date);
        var today = DateTime.Today;
        
        MissedDays = 0;
        
        for (var date = firstEntry; date <= today; date = date.AddDays(1))
        {
            if (!entryDates.Contains(date))
            {
                MissedDays++;
            }
        }
    }

    private void CalculateRecentMissedDays()
    {
        if (!_entries.Any()) return;

        var entryDates = _entries
            .Select(e => e.EntryDate.Date)
            .Distinct()
            .ToHashSet();

        var recentStart = DateTime.Today.AddDays(-30); // Last 30 days
        
        _recentMissedDays.Clear();
        
        for (var date = recentStart; date <= DateTime.Today; date = date.AddDays(1))
        {
            if (!entryDates.Contains(date))
            {
                _recentMissedDays.Add(date);
            }
        }
        
        // Take only last 5 missed days
        _recentMissedDays = _recentMissedDays
            .OrderByDescending(d => d)
            .Take(5)
            .ToList();
    }

    private string GetDaysAgo(DateTime date)
    {
        var days = (DateTime.Today - date).Days;
        return days == 0 ? "Today" : days == 1 ? "Yesterday" : $"{days}";
    }

    private string GetArcPath(double centerX, double centerY, double radius, double startAngle, double endAngle)
    {
        startAngle = (startAngle - 90) * Math.PI / 180;
        endAngle = (endAngle - 90) * Math.PI / 180;
        
        var startX = centerX + radius * Math.Cos(startAngle);
        var startY = centerY + radius * Math.Sin(startAngle);
        var endX = centerX + radius * Math.Cos(endAngle);
