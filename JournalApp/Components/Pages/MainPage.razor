        <!-- Top Row: Mood Data -->
        <div class="mood-section">
            <!-- Mood Distribution -->
            <div class="chart-card">
                <div class="card-header">
                    <h3>Mood Distribution</h3>
                    <span class="card-subtitle">Positive, Neutral & Negative</span>
                </div>
