                <div class="card-header">
                    <h3>Most Used Tags</h3>
                    <span class="card-subtitle">Top categories</span>
                </div>
                <div class="chart-wrapper">
                    @if (_isLoading)
                    {
                        <div class="chart-loading">
                            <div class="spinner"></div>
                            <span>Loading tags...</span>
                        </div>
