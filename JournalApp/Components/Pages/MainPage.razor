                    else if (_recentMissedDays.Any())
                    {
                        <div class="missed-days">
                            @foreach (var date in _recentMissedDays)
                            {
                                <div class="missed-day">
                                    <div class="missed-date">
                                        <span class="date-day">@date.ToString("dd")</span>
                                        <span class="date-month">@date.ToString("MMM")</span>
                                    </div>
                                    <div class="missed-info">
                                        <span class="missed-weekday">@date.ToString("dddd")</span>
                                        <span class="missed-ago">@GetDaysAgo(date) days ago</span>
                                    </div>
                                </div>
                            }
                            @if (MissedDays > 5)
                            {
                                <div class="more-days">
                                    + @(MissedDays - 5) more days
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="chart-empty">
                            <span>üéØ</span>
