                                        <div class="bar-label">@tag.Category</div>
                                        <div class="bar-track">
                                            <div class="bar-fill" style="width: @(tag.Percentage)%; background: @GetTagColor(tag.Category);"></div>
                                            <div class="bar-percent">@tag.Percentage.ToString("0")%</div>
