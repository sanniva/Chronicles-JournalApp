<div class="settings-page">
    <h1>Settings</h1>
    <p class="subtitle">Manage your account preferences</p>

    <!-- Account Info Card -->
    <div class="account-card">
        <div class="account-header">
            <div class="account-icon">
                <i class="fas fa-user-circle"></i>
            </div>
            <div>
                <h3>@UserState.CurrentUser.Username</h3>
                <p>Chronicles Journal User</p>
            </div>
        </div>

        <div class="account-section">
            <div>
                <h4>Change PIN</h4>
                <p>Update your access code</p>
            </div>
            <button class="change-pin-btn" @onclick="ShowChangePassword">Change PIN</button>
        </div>

        <div class="account-section logout-section">
            <div>
                <h4>Log Out</h4>
                <p>Sign out of your account</p>
            </div>
            <button class="logout-btn" @onclick="Logout">Logout</button>
        </div>
    </div>

    <!-- Theme Card -->
    <div class="theme-card">
        <div class="card-top">
            <div class="theme-icon">
                @if (_isDark)
                {
                    <i class="fas fa-moon"></i>
                }
                else
                {
                    <i class="fas fa-sun"></i>
                }
            </div>
            <div>
                <h3>Appearance</h3>
                <p>Switch between light and dark mode</p>
            </div>
        </div>
        <button @onclick="ToggleTheme" class="theme-btn">
            Switch to @(_isDark ? "Light" : "Dark")
        </button>
    </div>

    <!-- Export Card -->
    <div class="export-card">
        <div class="card-top">
            <div class="export-icon">
                <i class="fas fa-file-pdf"></i>
            </div>
            <div>
                <h3>Export Journal</h3>
                <p>Download your entries as PDF</p>
            </div>
        </div>
        
        <!-- Export Options -->
        <div class="export-options">
            <div class="export-type">
                <label>
                    <input type="radio" name="exportType" value="all" 
                           checked="@(_exportType == "all")"
                           @onchange="@(() => _exportType = "all")" />
                    <span>Export All Entries</span>
                </label>
                <label>
                    <input type="radio" name="exportType" value="range" 
                           checked="@(_exportType == "range")"
                           @onchange="@(() => _exportType = "range")" />
                    <span>Export by Date Range</span>
                </label>
            </div>

            @if (_exportType == "range")
            {
                <div class="date-range-inputs">
                    <div class="form-group">
                        <label>From Date</label>
                        <input type="date" @bind="_startDate" class="date-input" />
                    </div>
                    <div class="form-group">
                        <label>To Date</label>
                        <input type="date" @bind="_endDate" class="date-input" />
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(_rangeErrorMessage))
                {
                    <div class="error-message">@_rangeErrorMessage</div>
                }
            }

            <button class="export-btn" @onclick="ExportToPDF">
                <i class="fas fa-download"></i> Export PDF
            </button>
            
            @if (_showExportInfo && _exportedEntryCount > 0)
            {
                <div class="export-info success">
                    <i class="fas fa-check-circle"></i>
                    <span>Exported @_exportedEntryCount journal@((_exportedEntryCount == 1) ? "" : "s")</span>
                </div>
            }
            else if (_showExportInfo)
            {
                <div class="export-info warning">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>No entries found in selected range</span>
                </div>
            }
        </div>
    </div>

    <!-- Change PIN Modal (actually changes password) -->
    @if (_showPasswordModal)
    {
        <div class="modal-overlay">
            <div class="modal-content">
                <h3>Change PIN</h3>
                <div class="modal-form">
                    <div class="form-group">
                        <label>Current PIN</label>
                        <input type="password"
                               @bind="_currentPassword"
                               placeholder="Enter current PIN"
                               class="password-input"/>
                    </div>
                    <div class="form-group">
                        <label>New PIN</label>
                        <input type="password"
                               @bind="_newPassword"
                               placeholder="Enter new PIN"
                               class="password-input"/>
                    </div>
                    <div class="form-group">
                        <label>Confirm New PIN</label>
                        <input type="password"
                               @bind="_confirmPassword"
                               placeholder="Confirm new PIN"
                               class="password-input"/>
                    </div>

                    @if (!string.IsNullOrEmpty(_passwordErrorMessage))
                    {
                        <div class="error-message">@_passwordErrorMessage</div>
                    }

                    <div class="modal-actions">
                        <button @onclick="ClosePasswordModal" class="cancel-btn">Cancel</button>
                        <button @onclick="ChangePassword" class="save-btn">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool _isDark = false;
    private bool _showPasswordModal = false;
    private string _currentPassword = "";
    private string _newPassword = "";
    private string _confirmPassword = "";
    private string _passwordErrorMessage = "";
    
    // Export variables
    private string _exportType = "all";
    private DateTime _startDate = DateTime.Today.AddDays(-30);
    private DateTime _endDate = DateTime.Today;
    private string _rangeErrorMessage = "";
    private bool _showExportInfo = false;
    private int _exportedEntryCount = 0;

    protected override async Task OnInitializedAsync()
    {
        if (!UserState.IsAuthenticated)
        {
            Navigation.NavigateTo("/auth", true);
            return;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDark = await JSRuntime.InvokeAsync<string>("themeHelper.getTheme") == "dark";
            StateHasChanged();
        }
    }

    private async Task ToggleTheme()
    {
        _isDark = !_isDark;
        await JSRuntime.InvokeVoidAsync("themeHelper.setDark", _isDark);
        StateHasChanged();
    }

    private async Task Logout()
    {
        UserState.Logout();
        Navigation.NavigateTo("/auth", true);
    }

    private void ShowChangePassword()
    {
        _showPasswordModal = true;
        _currentPassword = "";
        _newPassword = "";
        _confirmPassword = "";
        _passwordErrorMessage = "";
        StateHasChanged();
    }

    private void ClosePasswordModal()
    {
        _showPasswordModal = false;
        StateHasChanged();
    }

    private async Task ChangePassword()
    {
        // Validate PINs
        if (string.IsNullOrEmpty(_currentPassword) || string.IsNullOrEmpty(_newPassword) || string.IsNullOrEmpty(_confirmPassword))
        {
            _passwordErrorMessage = "All fields are required";
            StateHasChanged();
            return;
        }

        if (_newPassword.Length < 4)
        {
            _passwordErrorMessage = "New PIN must be at least 4 characters";
            StateHasChanged();
            return;
        }

        if (_newPassword != _confirmPassword)
        {
            _passwordErrorMessage = "New PINs don't match";
            StateHasChanged();
            return;
        }

        // Change password
        var success = await UserState.ChangePassword(_currentPassword, _newPassword);
        if (success)
        {
            await JSRuntime.InvokeVoidAsync("alert", "PIN changed successfully!");
            ClosePasswordModal();
        }
        else
        {
            _passwordErrorMessage = "Current PIN is incorrect";
            StateHasChanged();
        }
    }

    private async Task ExportToPDF()
    {
        if (UserState.CurrentUser == null) return;

        try
        {
            List<JournalEntry> entries;
            string exportDescription;

            if (_exportType == "range")
            {
                if (_startDate > _endDate)
                {
                    _rangeErrorMessage = "Start date cannot be after end date";
                    StateHasChanged();
                    return;
                }

                entries = await DataService.GetEntriesByDateRange(_startDate, _endDate, UserState.CurrentUser.UserId);
                exportDescription = $"From {_startDate:yyyy-MM-dd} to {_endDate:yyyy-MM-dd}";
            }
            else
            {
                entries = await DataService.GetEntriesByUserId(UserState.CurrentUser.UserId);
                exportDescription = "All Entries";
            }

            if (entries.Count == 0)
            {
                _showExportInfo = true;
                _exportedEntryCount = 0;
                StateHasChanged();
                return;
            }

            _exportedEntryCount = entries.Count;
            _showExportInfo = true;

            var entriesData = entries
                .OrderByDescending(e => e.EntryDate)
                .Select(e => new
                {
                    Date = e.EntryDate.ToString("yyyy-MM-dd"),
                    Title = e.Title ?? "Untitled",
                    Mood = e.PrimaryMood ?? "Not specified",
                    Category = e.Category ?? "Uncategorized",
                    Content = PreserveOriginalFormatting(e.Content)
                })
                .ToList();

            var entriesJson = JsonSerializer.Serialize(entriesData);

            await JSRuntime.InvokeVoidAsync("generatePDF",
                UserState.CurrentUser.Username,
                DateTime.Now.ToString("yyyy-MM-dd HH:mm"),
                entries.Count,
                exportDescription,
                entriesJson);

            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error exporting to PDF: {ex.Message}");
        }
    }

    private string PreserveOriginalFormatting(string content)
    {
        if (string.IsNullOrEmpty(content)) return "";

        try
        {
            var cleaned = System.Text.RegularExpressions.Regex.Replace(content, "<.*?>", string.Empty);
            cleaned = System.Net.WebUtility.HtmlDecode(cleaned);
            
            cleaned = cleaned
                .Replace("&nbsp;", " ")
                .Replace("&amp;", "&")
                .Replace("&lt;", "<")
                .Replace("&gt;", ">")
                .Replace("&quot;", "\"")
                .Replace("&#39;", "'")
                .Replace("&#34;", "\"");
            
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, "<br\\s*/?>", "\n", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, "</p>", "\n\n", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, "<p[^>]*>", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
            
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, "</div>", "\n", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, "<div[^>]*>", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
            
            // FIX: Add spaces between words that run together (like "DayTook" -> "Day Took")
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, 
                @"([a-z])([A-Z])", 
                "$1 $2");
            
            // Handle markdown headers with ** for bold
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, @"^\s*\*\*(.*?)\*\*\s*$", "[HEADING]$1[/HEADING]", 
                System.Text.RegularExpressions.RegexOptions.Multiline);
            
            // Handle inline bold text **text**
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, @"\*\*(.*?)\*\*", "[BOLD]$1[/BOLD]");
            
            // Handle italic text *text* or _text_
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, @"\*(.*?)\*", "[ITALIC]$1[/ITALIC]");
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, @"_(.*?)_", "[ITALIC]$1[/ITALIC]");
            
            cleaned = cleaned.Trim();
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, @"\n{3,}", "\n\n");
            cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, @"[ ]{2,}", " ");
            
            return cleaned;
        }
        catch
        {
            return System.Text.RegularExpressions.Regex.Replace(content, "<.*?>", string.Empty);
        }
    }
}

