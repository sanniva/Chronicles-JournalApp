        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
    }

    .save-btn:hover {
        background: #5a6fd8;
    }
</style>

<script>
    // JavaScript function for PDF generation with formatting support
    async function generatePDF(username, exportDate, totalEntries, exportDescription, entriesJson) {
        try {
            // Import jsPDF dynamically
            const jsPDF = window.jspdf.jsPDF;

            // Parse entries data
            const entries = JSON.parse(entriesJson);

            // Create PDF document
            const doc = new jsPDF();

            // Set default font
            doc.setFont("helvetica");

            // Add title
            doc.setFontSize(24);
            doc.setTextColor(40, 40, 40);
            doc.text("Chronicles Journal Export", 105, 20, null, null, 'center');

            // Add subtitle with export description
            doc.setFontSize(12);
            doc.setTextColor(100, 100, 100);
            doc.text(`User: ${username} | Export Date: ${exportDate}`, 105, 30, null, null, 'center');
            doc.text(`Export Range: ${exportDescription}`, 105, 36, null, null, 'center');
            
            // Add total entries info
            doc.text(`Total Entries: ${totalEntries}`, 105, 42, null, null, 'center');

            // Add header line
            doc.setDrawColor(200, 200, 200);
            doc.line(20, 48, 190, 48);

            let yPosition = 58;
            const lineHeight = 6;
            const pageHeight = 280;
            const leftMargin = 20;
            const contentWidth = 170;

            // Add each entry
            doc.setFontSize(12);
            doc.setTextColor(60, 60, 60);

            for (let i = 0; i < entries.length; i++) {
                const entry = entries[i];

                // Check if we need a new page
                if (yPosition > pageHeight - 30) {
                    doc.addPage();
                    yPosition = 20;
                }

                // Entry header with date
                doc.setFontSize(14);
                doc.setFont("helvetica", "bold");
                doc.setTextColor(30, 30, 30);
                const entryHeader = `Entry ${i + 1}: ${entry.Date}`;
                doc.text(entryHeader, leftMargin, yPosition);
                yPosition += lineHeight + 2;

                // Entry metadata
                doc.setFontSize(11);
                doc.setFont("helvetica", "normal");
                doc.setTextColor(80, 80, 80);

                // Title
                if (entry.Title && entry.Title !== "Untitled") {
                    doc.text(`Title: ${entry.Title}`, leftMargin, yPosition);
                    yPosition += lineHeight;
                }

                // Mood
                if (entry.Mood && entry.Mood !== "Not specified") {
                    doc.text(`Mood: ${entry.Mood}`, leftMargin, yPosition);
                    yPosition += lineHeight;
                }

                // Category
                if (entry.Category && entry.Category !== "Uncategorized") {
                    doc.text(`Category: ${entry.Category}`, leftMargin, yPosition);
                    yPosition += lineHeight;
                }

                // Add separator before content
                yPosition += 4;
                doc.setDrawColor(230, 230, 230);
                doc.line(leftMargin, yPosition - 2, leftMargin + contentWidth, yPosition - 2);
                yPosition += 6;

                // Content - Preserve original formatting with line breaks
                doc.setFontSize(11);
                doc.setFont("helvetica", "normal");
                doc.setTextColor(40, 40, 40);

                if (entry.Content && entry.Content.trim() !== "") {
                    // Split the content by newlines to preserve line breaks
                    const contentLines = entry.Content.split('\n');
                    
                    for (let j = 0; j < contentLines.length; j++) {
                        let line = contentLines[j];
                        let lineToDraw = line;
                        
                        // Check for formatting markers
                        const hasHeading = line.includes('[HEADING]') && line.includes('[/HEADING]');
                        const hasBold = line.includes('[BOLD]') && line.includes('[/BOLD]');
                        const hasItalic = line.includes('[ITALIC]') && line.includes('[/ITALIC]');
                        
                        // Remove formatting markers for text measurement
                        lineToDraw = lineToDraw
                            .replace(/\[HEADING\]/g, '')
                            .replace(/\[\/HEADING\]/g, '')
                            .replace(/\[BOLD\]/g, '')
                            .replace(/\[\/BOLD\]/g, '')
                            .replace(/\[ITALIC\]/g, '')
                            .replace(/\[\/ITALIC\]/g, '');
                        
                        // Skip empty lines (but preserve paragraph spacing)
                        if (lineToDraw.trim() === "" && j < contentLines.length - 1) {
                            yPosition += lineHeight / 2;
                            continue;
                        }
                        
                        // Check if we need a new page
                        if (yPosition > pageHeight - 10) {
                            doc.addPage();
                            yPosition = 20;
                        }
                        
                        // Apply formatting based on markers
                        if (hasHeading) {
                            doc.setFont("helvetica", "bold");
                            doc.setFontSize(12);
                        } else if (hasBold) {
                            doc.setFont("helvetica", "bold");
                            doc.setFontSize(11);
                        } else if (hasItalic) {
                            doc.setFont("helvetica", "italic");
                            doc.setFontSize(11);
                        } else {
                            doc.setFont("helvetica", "normal");
                            doc.setFontSize(11);
                        }
                        
                        // If line is too long, split it
                        if (doc.getStringUnitWidth(lineToDraw) * doc.getFontSize() / doc.internal.scaleFactor > contentWidth) {
                            const splitLines = doc.splitTextToSize(lineToDraw, contentWidth);
                            for (let k = 0; k < splitLines.length; k++) {
                                if (yPosition > pageHeight - 10) {
                                    doc.addPage();
                                    yPosition = 20;
                                }
                                doc.text(splitLines[k], leftMargin, yPosition);
                                yPosition += lineHeight;
                            }
                        } else {
                            doc.text(lineToDraw, leftMargin, yPosition);
                            yPosition += lineHeight;
                        }
                        
                        // Reset to normal font for next line
                        doc.setFont("helvetica", "normal");
                        doc.setFontSize(11);
                    }
                } else {
                    doc.text("No content", leftMargin, yPosition);
                    yPosition += lineHeight;
                }

                // Add space between entries
                yPosition += 10;

                // Add page separator if not last entry
                if (i < entries.length - 1) {
                    if (yPosition > pageHeight - 20) {
                        doc.addPage();
                        yPosition = 20;
                    } else {
                        doc.setDrawColor(200, 200, 200);
                        doc.setLineWidth(0.5);
                        doc.line(leftMargin, yPosition - 5, leftMargin + contentWidth, yPosition - 5);
                        yPosition += 10;
                    }
                }
            }

            // Add footer
            doc.setFontSize(10);
            doc.setTextColor(150, 150, 150);
            doc.text("Generated by Chronicles Journal App", 105, pageHeight - 5, null, null, 'center');

            // Save the PDF
            const safeUsername = username.replace(/[^a-z0-9]/gi, '_').toLowerCase();
            const fileName = `chronicles_journal_${safeUsername}_${new Date().toISOString().slice(0, 10)}.pdf`;
            doc.save(fileName);

        } catch (error) {
            console.error('Error generating PDF:', error);
            alert('Error generating PDF: ' + error.message);
        }
    }

    // Load jsPDF library if not already loaded
    if (!window.jspdf) {
        const script = document.createElement('script');
        script.src = 'https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js';
        script.onload = function () {
            console.log('jsPDF loaded successfully');
        };
        document.head.appendChild(script);
    }
</script>
